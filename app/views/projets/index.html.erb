<div class="container">
  <div class="row">
    <div class="wrapper">
    <div class="new">
      <% if user_signed_in? %>
        <%= link_to "Nouveau Projet", new_projet_path, class: 'btn btn-success' %>
      <% end %>
    </div>
    <% @projets.each do |projet| %>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
          <%= link_to projet_path(projet.id), class: "card-link" do %>
            <%= cl_image_tag projet.vignette.path, class: "imgprojet" %>
              <div class="title">
              <% if projet.title.chars.count > 25 %>
                <h3><%=projet.title.chars.take(20).join + "..."  %></h3>
              <% else %>
                <h3><%=projet.title %></h3>
              <% end %>
            </div>
            <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>


