</div>

<div class="container">
  <div class="row">
    <div class="wrapper" style="padding-top: 0px">
      <div class="new">
        <% if user_signed_in? %>
          <%= link_to "Nouveau Projet", new_projet_path, class: 'btn btn-success' %>
        <% end %>
      </div>
      <div class="container" style="text-align: center; margin-top: 0px; padding-top: 0px; margin-bottom: 40px">
    <h1>Int√©rieur, Design & Architecture</h1>
    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, <br> quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
</p>
</div>
      <% @projets.each do |projet| %>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
          <%= link_to projet_path(projet.friendly_id), class: "card-link" do %>
            <div class="square-test-home" style="background-image: linear-gradient(rgba(0,0,0,.1), rgba(0,0,0,.2)), url(<%= cl_image_path(projet.vignette.path) %>)">
              <div class="title-test">
                <% projet.rank %>
                <% if projet.title.chars.count > 25 %>
                  <h3><%=projet.title.chars.take(20).join + "..."  %></h3>
                <% else %>
                  <h3><%=projet.title %></h3>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

