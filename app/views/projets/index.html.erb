<div class="container">
  <div class="row">
    <div class="wrapper">
    <% @projets.each do |projet| %>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 text-center">
        <%= link_to projet_path(projet.id), class: "card-link" do %>
          <%= cl_image_tag projet.vignette.path %>
          <% end %>
          <div class="title">
            <% if projet.title.chars.count > 25 %>
              <h3><%=projet.title.chars.take(20).join + "..."  %></h3>
            <% else %>
              <h3><%=projet.title %></h3>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


