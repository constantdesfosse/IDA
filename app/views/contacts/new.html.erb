<div class="banner_pages" style="background-image: url(<%= image_path 'contact.jpg' %>)">
  <h1>Contact</h1>
</div>

<div class="container">
  <div class="row">
  <div class="wrapper">
    <h1>Envoyez nous un message</h1>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
      <%= f.input :nom, :required => true %>
      <%= f.input :email, :required => true %>
      <%= f.input :message, :as => :text, :required => true %>
      <div class= "hidden">
        <%= f.input :nickname, :hint => 'Leave this field blank!' %>
      </div>
      </br>
      <%= f.button :submit, 'Envoyer', :class=> "btn-send" %>
      <% end %>
    </div>
    </div>
  </div>
</div>
<div class="frame_contact" style="background-image: url(<%= image_path 'map-globe.jpg' %>)";>
  <div class="opa" style ="z-index: 1;">
    <%= image_tag 'opa.png' %>
  </div>
  <div class="content-contact" style ="z-index: 2;">
  <span style="float: left; text-align: left;">
    <h1>CONTACT</h1>
    <h4>IDA / Intérieur, Désign & Architecture</h4>
    <p>54 rue des petites filles<br>
    44560 La Baule<br>
    Loire - Atlantique<br>
    France<br>
    Tél : 02 40 34 90 45
    </p>
    <%= link_to "Contact", new_contact_path, :class => 'btn-contact'%>
  </span>
  </div>
</div>


